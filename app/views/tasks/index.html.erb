<h1>Here is my to-do list</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <h5><%= link_to task.name, task_path(task) %></h5>
    <p class="modify-tasks"><%= link_to "edit", edit_task_path(task) %>
      <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }%></p>
    </li>
    <% end %>
  </ul>

  <div class="btn btn-primary" id="create-post-btn">
    <%= link_to "Create a new task", new_task_path %>
  </div>
