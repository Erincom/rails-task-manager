<div class="container">
  <%= form_for(@task) do |f| %>
  <div class="form-group row">
  <h1>Edit this task</h1>
    <div class="col-lg-10">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-10">
      <%= f.label :done %>
      <%= f.text_field :done %>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
